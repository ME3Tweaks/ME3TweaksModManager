<local:MMBusyPanelBase x:Class="MassEffectModManagerCore.modmanager.usercontrols.AboutPanel" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:local="clr-namespace:MassEffectModManagerCore.modmanager.usercontrols" xmlns:modmanagercore="clr-namespace:MassEffectModManagerCore" mc:Ignorable="d" d:DesignHeight="450" d:DesignWidth="800">
    <Grid VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Width="500" MaxHeight="500" Margin="0" Background="#115688">
        <Grid.RowDefinitions>
            <RowDefinition Height="128" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="130" />
            <ColumnDefinition Width="35*" />
        </Grid.ColumnDefinitions>
        <Image Source="/appicon.ico" Grid.Row="0" Grid.Column="0" Margin="4" ToolTip="{DynamicResource string_tooltip_hello}" RenderOptions.BitmapScalingMode="HighQuality" />
        <StackPanel Grid.Column="1" Grid.Row="0" Margin="0,3,0,0">
            <TextBlock Foreground="White" HorizontalAlignment="Left" Margin="10,0,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="22" Text="ME3Tweaks Mod Manager" FontWeight="Light" />
            <TextBlock Foreground="White" HorizontalAlignment="Left" Margin="10,0,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="15" FontWeight="Light" Text="{Binding Path=(modmanagercore:App.AppVersionAbout), Mode=OneTime, StringFormat='Version {0}'}" />
            <TextBlock Foreground="White" HorizontalAlignment="Left" Margin="10,0,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="12" FontWeight="Light" Text="{Binding BuildDate}" />
            <Image HorizontalAlignment="Left" Height="32" VerticalAlignment="Top" Source="/images/me3tweaks.png" Margin="8,0,0,0" Cursor="Hand" MouseDown="Image_ME3Tweaks_Click" ToolTip="{DynamicResource string_tooltip_softwareDevelopedWithLoveByME3Tweaks}" />
            <Button Content="{DynamicResource string_close}" HorizontalAlignment="Left" Margin="8,0,0,0" Click="ClosePanel" />
        </StackPanel>
        <ScrollViewer Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="2" VerticalScrollBarVisibility="Auto">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>
                <TextBlock Text="{DynamicResource string_libraries}" Foreground="White" TextAlignment="Center" Grid.ColumnSpan="3" FontWeight="Bold" FontSize="16" Margin="0,0,0,10" />
                <TextBlock ToolTip="Compression and decompression library&#xA;ME3Tweaks Mod Manager uses a customized version of this library" Grid.Row="1" TextAlignment="Center">
          <Hyperlink RequestNavigate="Navigate_Click" NavigateUri="https://github.com/squid-box/SevenZipSharp" Foreground="#FF87CEFA">
            <TextBlock Text="SevenZipSharp" />
          </Hyperlink>
        </TextBlock>
                <TextBlock ToolTip="Library for dark/white themes in WPF&#xA;ME3Tweaks Mod Manager uses a customized version of this library" Grid.Row="1" Grid.Column="1" TextAlignment="Center">
          <Hyperlink RequestNavigate="Navigate_Click" NavigateUri="https://github.com/benruehl/adonis-ui" Foreground="#FF87CEFA">
            <TextBlock Text="AdonisUI" />
          </Hyperlink>
        </TextBlock>
                <TextBlock ToolTip="Library for parsing INI files in C#&#xA;ME3Tweaks Mod Manager uses a customized version of this library" Grid.Row="1" Grid.Column="2" TextAlignment="Center">
          <Hyperlink RequestNavigate="Navigate_Click" NavigateUri="https://github.com/rickyah/ini-parser" Foreground="#FF87CEFA">
            <TextBlock Text="ini-parser" />
          </Hyperlink>
        </TextBlock>
                <TextBlock ToolTip="Utility library for converting byte sizes" Grid.Row="2" TextAlignment="Center">
          <Hyperlink RequestNavigate="Navigate_Click" NavigateUri="https://github.com/omar/ByteSize" Foreground="#FF87CEFA">
            <TextBlock Text="ByteSize" />
          </Hyperlink>
        </TextBlock>
                <TextBlock ToolTip="Modern asynchronous HTTP client library" Grid.Row="2" Grid.Column="1" TextAlignment="Center">
          <Hyperlink RequestNavigate="Navigate_Click" NavigateUri="https://flurl.dev/" Foreground="#FF87CEFA">
            <TextBlock Text="Flurl" />
          </Hyperlink>
        </TextBlock>
                <TextBlock ToolTip="IL weaver system that removes huge amounts of boilerplate" Grid.Row="2" Grid.Column="2" TextAlignment="Center">
          <Hyperlink RequestNavigate="Navigate_Click" NavigateUri="https://github.com/Fody/Fody" Foreground="#FF87CEFA">
            <TextBlock Text="Fody" />
          </Hyperlink>
        </TextBlock>
                <TextBlock ToolTip="Vector icon pack" Grid.Row="3" TextAlignment="Center">
          <Hyperlink RequestNavigate="Navigate_Click" NavigateUri="https://github.com/charri/Font-Awesome-WPF" Foreground="#FF87CEFA">
            <TextBlock Text="FontAwesome.WPF" />
          </Hyperlink>
        </TextBlock>
                <TextBlock ToolTip="Telemetry library for use with Microsoft Azure" Grid.Row="3" Grid.Column="1" TextAlignment="Center">
          <Hyperlink RequestNavigate="Navigate_Click" NavigateUri="https://appcenter.ms" Foreground="#FF87CEFA">
            <TextBlock Text="AppCenter" />
          </Hyperlink>
        </TextBlock>
                <TextBlock ToolTip="Lightweight validation framework" Grid.Row="3" Grid.Column="2" TextAlignment="Center">
          <Hyperlink RequestNavigate="Navigate_Click" NavigateUri="https://github.com/pglazkov/MvvmValidation" Foreground="#FF87CEFA">
            <TextBlock Text="MvvmValidation" />
          </Hyperlink>
        </TextBlock>
                <TextBlock ToolTip="Fast and flexible json parser" Grid.Row="4" TextAlignment="Center">
          <Hyperlink RequestNavigate="Navigate_Click" NavigateUri="https://www.newtonsoft.com/json" Foreground="#FF87CEFA">
            <TextBlock Text="Newtonsoft.Json" />
          </Hyperlink>
        </TextBlock>
                <TextBlock ToolTip="GitHub API client" Grid.Row="4" Grid.Column="1" TextAlignment="Center">
          <Hyperlink RequestNavigate="Navigate_Click" NavigateUri="https://github.com/octokit/octokit.net" Foreground="#FF87CEFA">
            <TextBlock Text="Octokit" />
          </Hyperlink>
        </TextBlock>
                <TextBlock ToolTip="Highly extensible logger" Grid.Row="4" Grid.Column="2" TextAlignment="Center" Foreground="#FF87CEFA">
          <Hyperlink RequestNavigate="Navigate_Click" NavigateUri="https://serilog.net/" Foreground="#FF87CEFA">
            <TextBlock Text="Serilog" />
          </Hyperlink>
        </TextBlock>
                <TextBlock ToolTip="Additional useful WPF controls&#xA;ME3Tweaks Mod Manager uses a customized version of this library" Grid.Row="5" Grid.Column="0" TextAlignment="Center">
          <Hyperlink RequestNavigate="Navigate_Click" NavigateUri="https://github.com/dotnetprojects/WpfExtendedToolkit" Foreground="#FF87CEFA">
            <TextBlock Text="WPF Extended Toolkit" />
          </Hyperlink>
        </TextBlock>
        <TextBlock ToolTip="Mass Effect trilogy package handling and file handlers" Grid.Row="5" Grid.Column="1" TextAlignment="Center">
          <Hyperlink RequestNavigate="Navigate_Click" NavigateUri="https://github.com/ME3Tweaks/ME3Explorer" Foreground="#FF87CEFA">
            <TextBlock Text="ME3Explorer" />
          </Hyperlink>
        </TextBlock>
                <TextBlock Text="{DynamicResource string_translators}" Foreground="White" Margin="0,15,0,10" TextAlignment="Center" Grid.Row="6" Grid.ColumnSpan="3" FontWeight="Bold" FontSize="16" />
                <TextBlock Foreground="White" Grid.Row="7" TextWrapping="Wrap" Text="English" TextAlignment="Center" FontWeight="Bold" />
                <TextBlock Foreground="White" Grid.Row="7" Grid.Column="1" TextWrapping="Wrap" Text="Russian" TextAlignment="Center" FontWeight="Bold" />
                <TextBlock Foreground="White" Grid.Row="7" Grid.Column="2" TextWrapping="Wrap" Text="German" TextAlignment="Center" FontWeight="Bold" />
                <TextBlock Foreground="White" Grid.Row="8" Grid.Column="0" TextWrapping="Wrap" Text="Mgamerz" TextAlignment="Center" />
                <TextBlock Foreground="White" Grid.Row="8" Grid.Column="1" TextWrapping="Wrap" Text="IAmViolon" TextAlignment="Center" />
                <TextBlock Foreground="White" Grid.Row="8" Grid.Column="2" TextWrapping="Wrap" Text="HarHarLinks" TextAlignment="Center" />
                <!--<TextBlock Foreground="White" Grid.Row="9" TextWrapping="Wrap" Text="German" TextAlignment="Center" FontWeight="Bold" Margin="0,5,0,0" />
                <TextBlock Foreground="White" Grid.Row="9" Grid.Column="1" TextWrapping="Wrap" Text="French" TextAlignment="Center" FontWeight="Bold" Margin="0,5,0,0" />
                <TextBlock Foreground="White" Grid.Row="9" Grid.Column="2" TextWrapping="Wrap" Text="Spanish" TextAlignment="Center" FontWeight="Bold" Margin="0,5,0,0" />
                <TextBlock Foreground="White" Grid.Row="10" Grid.Column="0" TextWrapping="Wrap" Text="HHL" TextAlignment="Center" />
                <TextBlock Foreground="White" Grid.Row="10" Grid.Column="1" TextWrapping="Wrap" Text="N/A" TextAlignment="Center" />
                <TextBlock Foreground="White" Grid.Row="10" Grid.Column="2" TextWrapping="Wrap" Text="" TextAlignment="Center" />-->
                <TextBlock Text="{DynamicResource string_specialThanks}" Foreground="White" Margin="0,15,0,10" TextAlignment="Center" Grid.Row="11" Grid.ColumnSpan="3" FontWeight="Bold" FontSize="16" />
                <TextBlock Foreground="White" Grid.Row="12" TextWrapping="Wrap" Grid.ColumnSpan="2" Text="Kinkojiro" TextAlignment="Center" FontWeight="Bold" />
                <TextBlock Foreground="White" Grid.Row="12" Grid.Column="1" Grid.ColumnSpan="2" TextWrapping="Wrap" Text="SirCxytryx" TextAlignment="Center" FontWeight="Bold" />
                <TextBlock Foreground="White" Grid.Row="13" Grid.Column="0" Grid.ColumnSpan="2" TextWrapping="Wrap" Text="Erik JS" TextAlignment="Center" FontWeight="Bold" />
                <TextBlock Foreground="White" Grid.Row="13" Grid.Column="1" Grid.ColumnSpan="2" TextWrapping="Wrap" Text="aquadran" TextAlignment="Center" FontWeight="Bold" />
                <TextBlock Foreground="White" Grid.Row="14" Grid.Column="0" TextWrapping="Wrap" Grid.ColumnSpan="3" Text="{DynamicResource string_youTheEndUser}" TextAlignment="Center" FontWeight="Bold" />
                <TextBlock Text="{DynamicResource string_license}" Foreground="White" Margin="0,15,0,10" TextAlignment="Center" Grid.Row="16" Grid.ColumnSpan="3" FontWeight="Bold" FontSize="16" />
                <TextBlock Foreground="White" Grid.ColumnSpan="3" Grid.Row="17" TextWrapping="Wrap" Text="Copyright (C) 2012 - 2020 ME3Tweaks&#xA;&#xA;This program is free software: you can redistribute it and/or modify it under the terms of the GNU General Public License as published by the Free Software Foundation, either version 3 of the License, or (at your option) any later version. This program is distributed in the hope that it will be useful, but WITHOUT ANY WARRANTY; without even the implied warranty of MERCHANTABILITY or FITNESS FOR A PARTICULAR PURPOSE. See the GNU General Public License for more details.&#xA;&#xA;Mass Effect is a registered trademark of EA INTERNATIONAL (STUDIO AND PUBLISHING) LTD. This program has no affiliation with BioWare or Electronic Arts." />
                <TextBlock Text="Telemetry key not present in this build" Visibility="{Binding TelemetryKeyAvailable, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter='Not'}" Foreground="White" Grid.ColumnSpan="3" Grid.Row="18" TextAlignment="Center" Margin="0,10"/>

            </Grid>
        </ScrollViewer>
    </Grid>
</local:MMBusyPanelBase>